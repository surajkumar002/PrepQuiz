<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codewithharry.prepquiz">

    <application
        android:allowBackup="true"
        android:icon="@drawable/quiz_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PrepQuiz">
        <activity
            android:name=".ProgressActivity"
            android:exported="false"
            android:label="@string/Results"/>
        <activity
            android:name=".AddSubjectActivity"
            android:exported="false" />
        <activity
            android:name=".ForgotActivity"
            android:exported="false" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GiveQuizActivity"
            android:exported="false" />
        <activity
            android:name=".NewQuizActivity"
            android:exported="false"
            android:label="Create a quiz" />
        <activity
            android:name=".AddQuestionsActivity"
            android:exported="false"
            android:label="Add a question" />
        <activity
            android:name=".AllQuizActivity"
            android:exported="true"
            android:label="Available Quizzes" />
    </application>

</manifest>